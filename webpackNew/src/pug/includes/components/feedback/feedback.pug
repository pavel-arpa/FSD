include ../like-button/like-button.pug

mixin feedback(arg)
   .feedback
      .feedback__profile-wrapper
         img.feedback__photo(src=`./img/${arg.photo}`, alt=arg.name)
         +like-button({count: arg.likes, clicked: arg.clicked})
      .feedback__text-wrapper
         h4.feedback__name= arg.name
         p.feedback__activity= arg.activity
         p.feedback__text= arg.text