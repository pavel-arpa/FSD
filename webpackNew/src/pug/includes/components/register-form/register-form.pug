mixin register-form(arg)
  .register-form
   .register-form__wrapper
      form(method="POST").register-form__form
        h1.register-form__title= "Регистрация аккаунта"

        .register-form__wrapper-names
          +text-field({text: "Имя"})
          +text-field({text: "Фамилия"})
          +radio-buttons({items: ["Мужчина", "Женщина"], hasTitle: false, title: "chooseGender"})
          
        +text-field({mask: "date", title: "Дата рождения", text: "ДД.ММ.ГГГГ"})

        .register-form__wrapper-service-data
          +text-field({title: "данные для входа в сервис", text: "Email"})
          +text-field({text: "Пароль", type: "password"})
          +toggle({items: ["Получать спецпредложения"], checked: []})
        
        +button({type: "large", text: "Перейти к оплате"})

      .register-form__wrapper-has-account
        p.register-form__has-account= "Уже есть аккаунт на Toxin"
        form.register-form__sign-in
          +button({type: "bordered", text: "Войти"})

