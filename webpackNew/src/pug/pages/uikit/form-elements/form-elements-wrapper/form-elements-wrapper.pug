.form-elements-wrapper
   //- внутри три секции 1:1:1
   .form-elements-wrapper__area.form-elements-wrapper__area_upper
      .form-elements-wrapper__sector 
         +text-field({title: "text field", text: "Email", status: "default"})
         +text-field({title: "text field", text: "This is pretty awesome", status: "hover / focus", mod: "focused"})
         +dropdown({title: "dropdown", text: "Сколько гостей", status: "default", type: "people"})
         +text-field({title: "masked text field", text: "ДД.ММ.ГГГГ", status: "default", mod: "focused", mask: true})
         +date-dropdown({type: "double"})
         +date-dropdown({type: "standart"})
         +subscription-text-field({title: "subscription text field"})

      .form-elements-wrapper__sector 
         +checkbox-list({type: "buttons", title: "checkbox button", items: ["Можно курить", "Можно с питомцами", "Можно пригласить гостей (до 10 человек)"], checked: [2, 3]})
         .radio-button-wrapper
            h3.radio-button-wrapper__title= "radio button"
            +radio-buttons({title: "radio buttons", items: ["Мужчина", "Женщина"]})
         +toggle({title: "toggle", items: ["Получать спецпредложения", "Получать спецпредложения"], checked: [1]})
         .like-button-wrapper
            h3.like-button-wrapper__title= "like button"
            .like-button-wrapper__buttons
               +like-button({count: 2})
               +like-button({count: 12, clicked: true})
         .rate-button-wrapper
            h3.rate-button-wrapper__title= "rate button"
            .rate-button-wrapper__buttons
               +rate-button({rating: 4})
               +rate-button({rating: 5})

      .form-elements-wrapper__sector 
         +range-slider({title: "range slider"})
         .button-wrapper
            .button-wrapper__title= "buttons"
            .button-wrapper__sector
               +button({text: "click me", type: "default", input_type: "submit"})
               +button({text: "click me", type: "default", status: "hovering", input_type: "submit"})
               +button({text: "click me", type: "bordered", input_type: "submit"})
               +button({text: "click me", type: "bordered", status: "hovering", input_type: "submit"})
               +button({text: "click me", type: "link", input_type: "submit"})
               +button({text: "click me", type: "link", status: "hovering", input_type: "submit"})
            +button({text: "Перейти к оплате", type: "large"})
         .pagination-wrapper
            .pagination-wrapper__title= "pagination"
            +pagination({count: 15})

   //- внутри три секции 1:1:1
   .form-elements-wrapper__area.form-elements-wrapper__area_upper
      .form-elements-wrapper__sector 
         +dropdown({title: "dropdown", status: "default", type: "accommodation"})
      .form-elements-wrapper__sector 
         +dropdown({title: "dropdown", text: "Сколько гостей", status: "default", type: "people"})
      .form-elements-wrapper__sector 
         +dropdown({title: "dropdown", text: "Сколько гостей", status: "default", type: "people"})

   //- внутри три секции 1:1:1
   .form-elements-wrapper__area.form-elements-wrapper__area_upper
      .form-elements-wrapper__sector 
         +checkbox-list({type: "expandable", title: "expandable checkbox list", items: ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь"], checked: [2, 3, 4], expanded: false})
         +checkbox-list({type: "expandable", title: "expandable checkbox list", items: ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь"], checked: [2, 3, 4], expanded: true})
      .form-elements-wrapper__sector 
         +checkbox-list({type: "rich", title: "rich checkbox button", items: ["Широкий коридор", "Помошник для инвалидов"], subtitles: ["Ширина коридоров в номере не менее 91 см.", "На 1 этаже вас встретит специалист и проводит до номера."]})
      .form-elements-wrapper__sector 
         +bullet-list({title: "bullet list", items: ["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"]})


   //- Нижняя часть - внутри две секции 1:2
   .form-elements-wrapper__area.form-elements-wrapper__area_lower
      .form-elements-wrapper__sector.form-elements-wrapper__sector
         +icon-text-list({logoType: "comfort", title: "Комфорт", text: "Шумопоглощающие стены"})
         +icon-text-list({logoType: "convenience", title: "Удобство", text: "Окно в каждой из спален"})
